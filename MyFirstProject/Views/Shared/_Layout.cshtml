<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My First Project</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="mySidenav" class="sidenav nav-side">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="#">About</a>
        <a href="#">Services</a>
        <a href="#">Clients</a>
        <a href="~/Home/Contact">Contact</a>
    </div>
    <div class="navbar navbar-default navbar">
        <div class="container">
            <div class="row">
                <div class="navbar-header col-md-12">
                    <a class="navbar-btn btn btn-default pull-left mar-right-5 nav-side" onclick="openNav()" id="sideNav">&#9776; Menu</a>
                    @Html.ActionLink("  My First Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    @if (User.Identity.IsAuthenticated)
                    {
                        <label class="navbar-text">Hello @base.User.Identity.Name!</label>
                        <ul class="nav navbar-nav pull-right">
                            <li>
                                <a href='@Url.Action("Logout","Account")'><span class="glyphicon glyphicon-log-out"></span> Logout</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="text-center panel-footer">
        <p style="position:center">&copy; @DateTime.Now.Year - My First Project</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
